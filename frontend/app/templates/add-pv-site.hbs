<h1>Add new photovoltaics</h1>
<form class="form-horizontal" role="form" {{action "addSite" on="submit"}}>
    <div class="form-group">
        <label class="control-label col-sm-4" for="label">Name:</label>
        <div class="col-sm-8">
            <input type="text" class="form-control" id="label" placeholder="Enter name">
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-sm-4" for="location">Location:</label>
        <div class="col-sm-8">
          {{aupac-ember-data-typeahead
          class='form-control'
          modelClass='location'
          id='location'
          placeholder='Ender location'
          queryKey='query'
          displayKey='name'
          action=(action (mut selection))
          }}
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-sm-4" for="max_production">Maximal power in kW:</label>
        <div class="col-sm-8">
            <input type="text" class="form-control" id="max_production" placeholder="Enter power">
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-sm-4" for="orientation">Orientation:</label>
        <div class="col-sm-8">
            <select id="orientation" size="1" class="form-control">
                <option value="">North</option>
                <option value="">North East</option>
                <option value="">East</option>
                <option value="">South East</option>
                <option value="">South</option>
                <option value="">South West</option>
                <option value="">West</option>
                <option value="">North West</option>
            </select>
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-4 col-sm-8">
            <button type="submit" class="btn btn-default">Submit</button>
        </div>
    </div>
</form>